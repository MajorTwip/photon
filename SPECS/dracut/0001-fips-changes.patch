From a86980c09547cb8503839e2bbfc5570943d6c89b Mon Sep 17 00:00:00 2001
From: Vikash Bansal <bvikas@vmware.com>
Date: Fri, 11 Feb 2022 22:21:49 +0530
Subject: [PATCH] fips changes

---
 modules.d/01fips/fips.sh         | 57 ++++++++++++++++++++++++++++----
 modules.d/01fips/module-setup.sh | 14 ++++++--
 2 files changed, 61 insertions(+), 10 deletions(-)

diff --git a/modules.d/01fips/fips.sh b/modules.d/01fips/fips.sh
index 9bc089f..bcd11ef 100755
--- a/modules.d/01fips/fips.sh
+++ b/modules.d/01fips/fips.sh
@@ -4,6 +4,10 @@ mount_boot()
 {
     boot=$(getarg boot=)
 
+    if ! [ -n "$boot" ]; then
+        boot="$(sed -nE 's@^([^[:space:]]+)[[:space:]]+/boot[[:space:]]+.*$@\1@p' /sysroot/etc/fstab)"
+    fi
+
     if [ -n "$boot" ]; then
         case "$boot" in
         LABEL=*)
@@ -82,10 +86,43 @@ do_fips()
 
     info "Loading and integrity checking all crypto modules"
     mv /etc/modprobe.d/fips.conf /etc/modprobe.d/fips.conf.bak
+
+    if ! insmod "/lib/modules/${KERNEL}/extra/hmac_generator.ko.xz"; then
+        warn "Not able to load hmac_generator"
+	return 1
+    fi
+    for _module in $FIPSMODULES; do
+
+        x=$(find /lib/modules/${KERNEL}/ -name ${_module}.ko.xz)
+        if [ -z $x ]; then
+	   warn "Module $_module not found"
+           return 1
+        fi
+	DIRECTORY=$(dirname $x)
+        FILENAME=$(basename $x)
+	MOD_HMAC=$DIRECTORY/.$FILENAME.hmac
+	if [ ! -f $MOD_HMAC ]; then
+	   warn ".hmac file for Module $_module not found"
+           return 1
+        fi
+        HMAC_SUM_ORIG=$(cat $MOD_HMAC | while read a b || [ -n "$a" ]; do printf "%s\n" $b; done)
+        HMAC_SUM_CALC=$(hmacgen HMAC-SHA256 "FIPS-PH3-VMW2020" $x)
+        if [ -z "$HMAC_SUM_ORIG" ] || [ -z "$HMAC_SUM_CALC" ] || [ "${HMAC_SUM_ORIG}" != "${HMAC_SUM_CALC}" ]; then
+           warn "$_module HMAC sum mismatch"
+           return 1
+        fi
+    done
     for _module in $FIPSMODULES; do
-        if [ "$_module" != "tcrypt" ]; then
+        if [ "$_module" != "tcrypt" ] && [ "$_module" != "hmac_generator" ]; then
             if ! modprobe "${_module}"; then
-                # check if kernel provides generic algo
+		warn "modprobe for $_module failed"
+		if [ "$_module" == "aesni-intel" ]; then
+		    grep -q aes /proc/cpuinfo
+		    if [ "$?" = "1" ]; then
+		        warn "Underlying CPU doesn't Support AESNI instruction set"
+		        continue
+		    fi
+		fi
                 _found=0
                 while read _k _s _v || [ -n "$_k" ]; do
                     [ "$_k" != "name" -a "$_k" != "driver" ] && continue
@@ -99,9 +136,6 @@ do_fips()
     done
     mv /etc/modprobe.d/fips.conf.bak /etc/modprobe.d/fips.conf
 
-    info "Self testing crypto algorithms"
-    modprobe tcrypt || return 1
-    rmmod tcrypt
 
     info "Checking integrity of kernel"
     if [ -e "/run/initramfs/live/vmlinuz0" ]; then
@@ -127,13 +161,22 @@ do_fips()
         fi
 
         BOOT_IMAGE_HMAC="/boot/${BOOT_IMAGE_PATH}.${BOOT_IMAGE_NAME}.hmac"
+        BOOT_IMAGE_KERN="/boot/${BOOT_IMAGE_PATH}${BOOT_IMAGE_NAME}"
         if ! [ -e "${BOOT_IMAGE_HMAC}" ]; then
             warn "${BOOT_IMAGE_HMAC} does not exist"
             return 1
         fi
-
-        sha512hmac -c "${BOOT_IMAGE_HMAC}" || return 1
+	HMAC_SUM_ORIG=$(cat $BOOT_IMAGE_HMAC | while read a b || [ -n "$a" ]; do printf "%s\n" $b; done)
+        HMAC_SUM_CALC=$(hmacgen HMAC-SHA256 "FIPS-PH3-VMW2020" $BOOT_IMAGE_KERN )
+        if [ -z "$HMAC_SUM_ORIG" ] || [ -z "$HMAC_SUM_CALC" ] || [ "${HMAC_SUM_ORIG}" != "${HMAC_SUM_CALC}" ]; then
+           warn "HMAC sum mismatch"
+           return 1
+        fi
     fi
+    #integrity check
+    warn "Self testing crypto algorithms"
+    modprobe tcrypt || return 1
+    rmmod tcrypt
 
     info "All initrd crypto checks done"
 
diff --git a/modules.d/01fips/module-setup.sh b/modules.d/01fips/module-setup.sh
index f3af4d9..50b373e 100755
--- a/modules.d/01fips/module-setup.sh
+++ b/modules.d/01fips/module-setup.sh
@@ -13,8 +13,8 @@ depends() {
 # called by dracut
 installkernel() {
     local _fipsmodules _mod
-    if [[ -f "${srcmods}/modules.fips" ]]; then
-        _fipsmodules="$(cat "${srcmods}/modules.fips")"
+    if [[ -f "${srcmods}/../modules.fips" ]]; then
+        _fipsmodules="$(cat "${srcmods}/../modules.fips")"
     else
         _fipsmodules=""
 
@@ -55,8 +55,16 @@ install() {
     inst_hook pre-trigger 01 "$moddir/fips-boot.sh"
     inst_hook pre-pivot 01 "$moddir/fips-noboot.sh"
     inst_script "$moddir/fips.sh" /sbin/fips.sh
+    inst_dir "/boot"
 
-    inst_multiple sha512hmac rmmod insmod mount uname umount
+    KERNEL=$(uname -r)
+    inst_any -d /boot/.vmlinuz-${KERNEL}.hmac /boot/.vmlinuz-${KERNEL}.hmac
+    x=$(find ${srcmods}/ -name "*.hmac")
+    for MODULE in $x ; do
+	inst_any -d $MODULE $MODULE
+    done
+
+    inst_multiple find hmacgen grep rmmod insmod mount uname umount dirname basename
 
     inst_simple /etc/system-fips
     [ -c ${initdir}/dev/random ] || mknod ${initdir}/dev/random c 1 8 \
